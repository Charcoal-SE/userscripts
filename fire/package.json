{
  "name": "fire",
  "version": "1.4.0",
  "description": "FIRE adds a button to SmokeDetector reports that allows you to provide feedback & flag, all from chat.",
  "scripts": {
    "test": "xo",
    "compile-scss": "sed -e '/^---/d' fire.scss | node-sass > fire.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charcoal-SE/userscripts.git"
  },
  "author": "Charcoal",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "bugs": {
    "url": "https://github.com/Charcoal-SE/userscripts/issues"
  },
  "homepage": "https://github.com/Charcoal-SE/userscripts#readme",
  "devDependencies": {
    "eslint": "^7.28.0",
    "webpack": "^5.38.1",
    "xo": "^0.40.2"
  },
  "//": "FIRE overrides",
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "es6",
      "jquery",
      "greasemonkey"
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "jQuery.Deferred"
          ]
        }
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "error"
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "camelcase": "off",
      "max-params": [
        "warn",
        5
      ],
      "linebreak-style": "off",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-console": "error",
      "no-extra-parens": "off",
      "no-prototype-builtins": "error",
      "complexity": [
        "error",
        20
      ],
      "consistent-return": "error",
      "no-else-return": "error",
      "no-empty-function": "error",
      "no-magic-numbers": [
        "error",
        {
          "ignore": [
            -1,
            0,
            1,
            2
          ],
          "ignoreArrayIndexes": true
        }
      ],
      "vars-on-top": "error",
      "consistent-this": [
        "error",
        "that"
      ],
      "func-style": [
        "error",
        "declaration"
      ],
      "newline-per-chained-call": [
        "error",
        {
          "ignoreChainWithDepth": 2
        }
      ],
      "no-underscore-dangle": "error",
      "no-unneeded-ternary": "error",
      "object-curly-newline": [
        "error",
        {
          "multiline": true
        }
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "prefer-template": "error",
      "prefer-destructuring": [
        "error",
        {
          "object": true
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "no-var": "error",
      "prefer-const": "error",
      "prefer-arrow-callback": "error",
      "object-shorthand": "error",
      "capitalized-comments": "off",
      "valid-jsdoc": [
        "error",
        {
          "prefer": {
            "return": "returns"
          },
          "preferType": {
            "Array": "array",
            "arr": "array",
            "Boolean": "boolean",
            "bool": "boolean",
            "Function": "function",
            "fn": "function",
            "func": "function",
            "int": "number",
            "Number": "number",
            "String": "string",
            "str": "string",
            "Object": "object",
            "obj": "object",
            "type": "a valid type"
          },
          "requireReturn": false,
          "requireReturnType": true,
          "requireParamDescription": true,
          "requireReturnDescription": true,
          "matchDescription": "[A-Z].+\\."
        }
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "eslint-comments/no-unused-disable": "off",
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 1,
          "SwitchCase": 1
        }
      ],
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true
        }
      ],
      "padding-line-between-statements": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/prefer-node-append": "off",
      "unicorn/prefer-includes": "off",
      "unicorn/no-array-for-each": 0,
      "unicorn/no-array-reduce": 0,
      "unicorn/no-instanceof-array": 0,
      "unicorn/no-this-assignment": 0,
      "unicorn/numeric-separators-style": 0,
      "unicorn/prefer-date-now": 0,
      "unicorn/prefer-dom-node-append": 0,
      "unicorn/prefer-dom-node-remove": 0,
      "unicorn/prefer-module": 0,
      "unicorn/prefer-optional-catch-binding": 0,
      "unicorn/prefer-ternary": 0,
      "unicorn/prevent-abbreviations": 0
    },
    "globals": [
      "fire",
      "metapi",
      "toastr",
      "CHAT"
    ]
  }
}
