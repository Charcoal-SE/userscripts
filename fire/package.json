{
  "name": "fire",
  "version": "1.3.0",
  "description": "FIRE adds a button to SmokeDetector reports that allows you to provide feedback & flag, all from chat.",
  "scripts": {
    "test": "xo",
    "compile-scss": "sed -e '/^---/d' fire.scss | node-sass > fire.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charcoal-SE/userscripts.git"
  },
  "author": "Charcoal",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "bugs": {
    "url": "https://github.com/Charcoal-SE/userscripts/issues"
  },
  "homepage": "https://github.com/Charcoal-SE/userscripts#readme",
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "//": "FIRE overrides",
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "es6",
      "jquery",
      "greasemonkey"
    ],
    "rules": {
      "arrow-parens": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"],
      "new-cap": ["error", { "capIsNewExceptions": ["jQuery.Deferred"] }],
      "quotes": ["error", "single", {"avoidEscape": true}],
      "camelcase": "off",
      "max-params": ["warn", 5],
      "linebreak-style": "off",
      "curly": ["error"],
      "no-console": "error",
      "no-extra-parens": "off",
      "no-prototype-builtins": "error",
      "complexity": ["error", 20],
      "consistent-return": "error",
      "no-else-return": "error",
      "no-empty-function": "error",
      "no-magic-numbers": ["error", {
        "ignore": [-1, 0, 1, 2],
        "ignoreArrayIndexes": true
      }],
      "vars-on-top": "error",
      "consistent-this": ["error", "that"],
      "func-style": ["error", "declaration"],
      "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
      "no-underscore-dangle": "error",
      "no-unneeded-ternary": "error",
      "object-curly-newline": ["error", { "multiline": true }],
      "template-curly-spacing": ["error", "never"],
      "prefer-template": "error",
      "prefer-destructuring": ["error", {"object": true}, {"enforceForRenamedProperties": false}],
      "no-var": "error",
      "prefer-const": "error",
      "prefer-arrow-callback": "error",
      "object-shorthand": "error",
      "capitalized-comments": "off",
      "valid-jsdoc": ["error",
        {
          "prefer": {"return": "returns"},
          "preferType": {
            "String": "string", "str": "string",
            "Number": "number", "int": "number",
            "Boolean": "boolean", "bool": "boolean",
            "Object": "object", "obj": "object",
            "Array": "array", "arr": "array",
            "Function": "function", "fn": "function", "func": "function",
            "type": "a valid type"
          },
          "requireReturn": false,
          "matchDescription": "[A-Z].+\\."
        }
      ],
      "require-jsdoc": ["error", {"require": {"FunctionDeclaration": true, "MethodDefinition": true, "ClassDeclaration": true}}]
    },
    "globals": [
      "fire",
      "metapi",
      "toastr",
      "CHAT"
    ]
  }
}
