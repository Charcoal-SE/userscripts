{
  "name": "charcoal-userscripts",
  "version": "0.0.0",
  "description": "A selection of useful userscripts for the regulars of [Charcoal HQ](http://chat.stackexchange.com/rooms/11540/charcoal-hq).",
  "scripts": {
    "test": "xo",
    "get-meta": "bash ./extractScriptMetadata.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charcoal-SE/userscripts.git"
  },
  "author": "Charcoal",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "bugs": {
    "url": "https://github.com/Charcoal-SE/userscripts/issues"
  },
  "homepage": "https://github.com/Charcoal-SE/userscripts#readme",
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-utils": "^1.4.3",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery"
    ],
    "ignores": [
      "fire/*",
      "metapi/*",
      "metapi/*/*",
      "ms-dark-theme/*",
      "review-keyboard-shortcuts/*",
      "sim/*"
    ],
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "camelcase": 1,
      "brace-style": 0,
      "no-prototype-builtins": 0,
      "dot-notation": 0,
      "linebreak-style": "off",
      "comma-dangle": "off",
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "unicorn/filename-case": "off",
      "capitalized-comments": 0,
      "eslint-comments/no-unused-disable": 0,
      "indent": 0,
      "no-else-return": 0,
      "no-multi-spaces": 0,
      "no-multiple-empty-lines": 0,
      "no-unused-vars": 0,
      "no-var": 0,
      "object-shorthand": 0,
      "padding-line-between-statements": 0,
      "prefer-arrow-callback": 0,
      "prefer-const": 0,
      "prefer-destructuring": 0,
      "prefer-rest-params": 0,
      "unicorn/catch-error-name": 0,
      "unicorn/explicit-length-check": 0,
      "unicorn/no-array-instanceof": 0,
      "unicorn/prefer-add-event-listener": 0,
      "unicorn/prefer-node-append": 0,
      "unicorn/prefer-query-selector": 0,
      "valid-jsdoc": 0
    },
    "globals": [
      "CHAT",
      "Notifier",
      "StackExchange"
    ]
  }
}
