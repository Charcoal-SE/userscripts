{
  "name": "charcoal-userscripts",
  "version": "0.0.0",
  "description": "A selection of useful userscripts for the regulars of [Charcoal HQ](http://chat.stackexchange.com/rooms/11540/charcoal-hq).",
  "scripts": {
    "test": "xo --ignore fire.meta.js --ignore fire.user.js --ignore set-minimal-fire-sites-and-fire-user-sites.js --ignore stylelint.config.js --ignore ms_dark_theme_meta.js --ignore object-equality.js --ignore ms_dark_theme.user.js --ignore ms_dark_theme.meta.js --ignore metapi.js --ignore sim.user.js --ignore test/tests.js --ignore test/object-equality.js --ignore test/object-equality-tests.js --ignore review-keyboard-shortcuts/review-shortcuts.user.js",
    "get-meta": "bash ./extractScriptMetadata.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charcoal-SE/userscripts.git"
  },
  "author": "Charcoal",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "bugs": {
    "url": "https://github.com/Charcoal-SE/userscripts/issues"
  },
  "homepage": "https://github.com/Charcoal-SE/userscripts#readme",
  "devDependencies": {
    "eslint": "^7.32.0",
    "webpack": "^5.38.1",
    "xo": "^0.46.4",
    "eslint-plugin-promise": "^5.1.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery"
    ],
    "ignores": [
      "fire/*",
      "metapi/*",
      "metapi/*/*",
      "ms-dark-theme/*",
      "review-keyboard-shortcuts/*",
      "sim/*"
    ],
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "camelcase": 1,
      "brace-style": 0,
      "no-prototype-builtins": 0,
      "dot-notation": 0,
      "linebreak-style": "off",
      "comma-dangle": "off",
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "unicorn/filename-case": "off",
      "capitalized-comments": 0,
      "eslint-comments/no-unused-disable": 0,
      "indent": 0,
      "no-else-return": 0,
      "no-multi-spaces": 0,
      "no-multiple-empty-lines": 0,
      "no-unused-vars": 0,
      "no-var": 0,
      "object-shorthand": 0,
      "padding-line-between-statements": 0,
      "prefer-arrow-callback": 0,
      "prefer-const": 0,
      "prefer-destructuring": 0,
      "prefer-rest-params": 0,
      "unicorn/catch-error-name": 0,
      "unicorn/explicit-length-check": 0,
      "unicorn/no-array-instanceof": 0,
      "unicorn/prefer-add-event-listener": 0,
      "unicorn/prefer-node-append": 0,
      "unicorn/prefer-query-selector": 0,
      "valid-jsdoc": 0,
      "no-redeclare": [
        "error",
        {
          "builtinGlobals": false
        }
      ],
      "unicorn/no-for-loop": 0,
      "unicorn/no-nested-ternary": 0,
      "unicorn/prefer-includes": 0,
      "unicorn/prefer-string-slice": 0,
      "unicorn/prefer-node-remove": 0,
      "promise/prefer-await-to-then": 0,
      "unicorn/prevent-abbreviations": 0,
      "unicorn/string-content": 0,
      "unicorn/better-regex": 0,
      "unicorn/no-fn-reference-in-iterator": 0,
      "unicorn/prefer-number-properties": 0,
      "unicorn/no-array-for-each": 0,
      "unicorn/no-array-reduce": 0,
      "unicorn/no-instanceof-array": 0,
      "unicorn/no-this-assignment": 0,
      "unicorn/numeric-separators-style": 0,
      "unicorn/prefer-date-now": 0,
      "unicorn/prefer-dom-node-append": 0,
      "unicorn/prefer-dom-node-remove": 0,
      "unicorn/prefer-module": 0,
      "unicorn/prefer-optional-catch-binding": 0,
      "unicorn/prefer-ternary": 0
    },
    "globals": [
      "CHAT",
      "Notifier",
      "StackExchange"
    ]
  }
}
