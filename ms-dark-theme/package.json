{
  "name": "ms-dark-theme",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "test": "xo"
  },
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery"
    ],
    "rules": {
      "quotes": ["warn", "double", {"avoidEscape": true}],
      "camelcase": 1,
      "brace-style": 0,
      "no-prototype-builtins": 0,
      "dot-notation": 0,
      "linebreak-style": "off",
      "comma-dangle": "off",
      "no-eq-null": "off",
      "eqeqeq": ["error", "smart"],
      "unicorn/filename-case": "off"
    },
    "globals": [
      "CHAT",
      "Notifier",
      "StackExchange"
    ]
  }
}
